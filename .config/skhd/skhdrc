# rotate layout clockwise
alt - r : yabai -m space --rotate 270
# Make fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen
# Balance the layout
alt - e : yabai -m space --balance
# Toggle padding on/off
alt - g : yabai -m space --toggle padding --toggle gap
# Float / Unfloat window
alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

alt - m : yabai -m display --focus next;
alt - n : yabai -m display --focus prev;

# Change desktop
# i used sttings in mac 
# ctrl - 1 : yabai -m space --focus 1
# ctrl - 2 : yabai -m space --focus 2
# ctrl - 3 : yabai -m space --focus 3
# ctrl - 4 : yabai -m space --focus 4
# ctrl - 5 : yabai -m space --focus 5
# ctrl - 6 : yabai -m space --focus 6
# ctrl - 7 : yabai -m space --focus 7
# ctrl - 8 : yabai -m space --focus 8
# ctrl - 9 : yabai -m space --focus 9
# ctrl - 0 : yabai -m space --focus 10

# Navigation
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Moving windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window to space
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# send window to monitor and follow focus
shift + alt - s : yabai -m window --display next; yabai -m display --focus next;
shift + alt - g : yabai -m window --display prev; yabai -m display --focus prev;


# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service 
ctrl + alt - s : yabai --start-service 
ctrl + alt - r : yabai --restart-service ; skhd --reload
